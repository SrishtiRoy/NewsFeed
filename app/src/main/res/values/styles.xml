<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="LabelInactive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>


    <style name="SubLabelActive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#9C9C9C</item>
    </style>

    <style name="SubLabelInactive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>

    <style name="Freecharge.TextView.50.Transparent" parent="Freecharge.TextView">
        <item name="android:textColor">@color/default_text_black_color_50</item>
    </style>

    <style name="Freecharge.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/default_text_black_color</item>
        <item name="android:textColorHint">@color/default_text_hint_black_color</item>
    </style>

    <style name="Freecharge.TextView.70.Transparent" parent="Freecharge.TextView">
        <item name="android:textColor">@color/default_text_black_color_70</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

