<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/rent_detail_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/rent_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rent"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rent_label"
                    android:layout_weight="1"
                    android:text="5000"

                    android:textSize="16sp" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/fc_status_gray" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/available_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Available"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/available_label"
                    android:layout_weight="1"
                    android:text="March 26"

                    android:textSize="16sp" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/fc_status_gray" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/occupancy_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Occupancy"

                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/occupancy_label"
                    android:layout_weight="1"
                    android:text="Single"

                    android:textSize="16sp" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:visibility="invisible"
                    android:layout_alignParentRight="true"
                    android:background="@color/fc_status_gray" />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/rent_detail_frame"
            android:id="@+id/horizontal_view_1"
            android:background="@color/fc_status_gray" />
        <LinearLayout
            android:id="@+id/lifestyle_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_view_1"

            android:orientation="horizontal"
            android:weightSum="4">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/food_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Food"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/food_label"
                    android:layout_weight="1"
                    android:text="Non Veg"

                    android:textSize="16sp" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/fc_status_gray" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/smoking_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Smoking"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/smoking_label"
                    android:layout_weight="1"
                    android:text="No"

                    android:textSize="16sp" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/fc_status_gray" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/drinking_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Drinking"

                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drinking_label"
                    android:layout_weight="1"
                    android:text="No"

                    android:textSize="16sp" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/fc_status_gray" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/lifestyle_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LifeStyle"

                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lifestyle_label"
                    android:layout_weight="1"
                    android:text="Night Owl"

                    android:textSize="16sp" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"
                    android:background="@color/fc_status_gray" />


            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/lifestyle_frame"
            android:id="@+id/horizontal_view_2"

            android:background="@color/fc_status_gray" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontal_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/horizontal_view_2"
            android:background="#fff"

            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/horizontal_recycler_view"
            android:id="@+id/horizontal_view_3"
            android:background="@color/fc_status_gray" />

        <TextView
            android:id="@+id/description_label"
            android:layout_below="@+id/horizontal_view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:id="@+id/description_label_data"
            android:layout_below="@+id/description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" data"
            android:textColor="@color/fc_status_gray" />
        <LinearLayout
            android:id="@+id/contact_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_label_data"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="2">

            <widgets.FancyButton
                android:id="@+id/btn_call"
                fancy:fb_borderColor="#00bcd4"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#FFFFFF"
                fancy:fb_focusColor="#FFFFFF"
                fancy:fb_fontIconSize="25sp"
                fancy:fb_iconPosition="right"
                fancy:fb_radius="30dp"
                fancy:fb_text="Call"
                fancy:fb_textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="10dp" />

            <widgets.FancyButton
                android:id="@+id/btn_sms"
                fancy:fb_borderColor="#00bcd4"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#FFFFFF"
                fancy:fb_focusColor="#FFFFFF"
                fancy:fb_fontIconSize="25sp"
                fancy:fb_iconPosition="right"
                fancy:fb_radius="30dp"
                fancy:fb_text="Share"
                fancy:fb_textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="10dp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
